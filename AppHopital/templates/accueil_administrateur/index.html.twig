{% extends 'base.html.twig' %}

{% block title %}Accueil Admin{% endblock %}

{% block body %}
    <!--header-->
    <div class="container">
        <div class="row">
            <div class="col-md">
                <button onclick="window.location.href = '/';" type="button" class="btn btn-secondary">Retour</button>
            </div>
            <div class="col-md align-self-center"><h2>Accueil</h2></div>

        </div>
    </div>
    <!--Listes patients-->
    <div class="container">
        <p><h4> Listes des patients </h4></p>
        <div class="table-wrapper-scroll-y my-custom-scrollbar">

            <table width="100%" class="table-primary">
                <thead>
                <tr>
                    <th scope="col">Nom du patient</th>
                    <th scope="col"><p>Options</p></th>
                    <th scope="col">
                        <div class="right-text-pad">
                            <button onclick="window.location.href = '/ajout/patient';" type="button" class="btn btn-secondary">Ajouter</button>
                        </div>
                    </th>

                </tr>
                </thead>
                <tbody>
                {% for patients in tableauPatients %}
                    <tr>
                        <td>{{ patients.nom }}</td>
                        <td>
                            <button onclick="window.location.href='/modification/patient/{{ patients.id }}';" type="button" class="btn btn-secondary">Modifier</button>
                            <button onclick="window.location.href='/confirme/delete/patient/{{ patients.id }}';" type="button" class="btn btn-secondary">Supprimer</button>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>

        </div>

    </div>

    <!--Listes comptes-->
    <div class="container">
        <p><h4> Listes des infirmiers </h4></p>
        <div class="table-wrapper-scroll-y my-custom-scrollbar">

            <table width="100%" class="table-primary">
                <thead>
                <tr>
                    <th scope="col">Nom de l'infirmier</th>
                    <th scope="col"><p>Options</p></th>
                    <th scope="col">
                        <div class="right-text-pad">
                            <button onclick="window.location.href = '/ajout/infirmier';" type="button" class="btn btn-secondary">Ajouter</button>
                        </div>
                    </th>

                </tr>
                </thead>
                <tbody>
                {% for infirmiers in tableauInfirmiers %}
                    <tr>
                        <td>{{ infirmiers.nom }}</td>
                        <td>
                            <button onclick="window.location.href='/modification/infirmier/{{ infirmiers.id }}';" type="button" class="btn btn-secondary">Modifier</button>
                            <button onclick="window.location.href='/confirme/delete/lit/{{ infirmiers.id }}';" type="button" class="btn btn-secondary">Supprimer</button>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>

        </div>

    </div>
    <!--Listes Services-->
    <div class="container">
        <p><h4> Listes des services</h4></p>
        <div class="table-wrapper-scroll-y my-custom-scrollbar">

            <table width="100%" class="table-primary">
                <thead>
                <tr>
                    <th scope="col">Nom du service</th>
                    <th scope="col"><p>Options</p></th>
                    <th scope="col">
                        <div class="right-text-pad">
                            <button onclick="window.location.href = '/ajout/service';" type="button" class="btn btn-secondary">Ajouter</button>
                        </div>
                    </th>

                </tr>
                </thead>
                <tbody>
                {% for services in tableauServices %}
                    <tr>
                        <td>{{ services.label }}</td>
                        <td>
                            <button onclick="window.location.href='/modification/service/{{ services.id }}';"type="button" class="btn btn-secondary">Renommer</button>
                            <button onclick="window.location.href='/confirme/delete/service/{{ services.id }}';" type="button" class="btn btn-secondary">Supprimer</button>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>

            </table>

        </div>

    </div>
    <!--Listes lits-->
    <div class="container">
        <p><h4> Listes des lits </h4></p>


        <table width="100%" class="table-primary table-wrapper-scroll-y my-custom-scrollbar">
            <thead>
            <tr>
                <th scope="col">Numéro du lit</th>
                <th scope="col"><p>Options</p></th>
                <th scope="col">
                    <div class="right-text-pad">
                        <button onclick="window.location.href = '/ajout/lit';" type="button" class="btn btn-secondary">Ajouter</button>
                    </div>
                </th>

            </tr>
            </thead>
            <tbody>
             {% for lits in tableauLits %}
                <tr>
                    <td>Lit n°{{ lits.numero }} Chambre n°{{ lits.chambre }}</td>
                    <td>
                        <button onclick="window.location.href='/modification/lit/{{ lits.id }}';" type="button" class="btn btn-secondary">Modifier</button>
                        <button onclick="window.location.href='/confirme/delete/service/{{ lits.id }}';" type="button" class="btn btn-secondary">Supprimer</button>

                        {% if lits.etat == true %}
                            <label>OUI</label>
                        {% else %}
                            <label>NON</label>
                        {% endif %}

                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

    </div>







{% endblock %}
